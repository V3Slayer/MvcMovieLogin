@model MvcMovieLogin.Models.ApplicationUser
@{
    ViewData["Title"] = "ScreenName";
}
<h3>Change your screen name</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ScreenName" class="control-label"></label>
                <input asp-for="ScreenName" class="form-control" />
                <span asp-validation-for="ScreenName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-info" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>
<div>
    
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
